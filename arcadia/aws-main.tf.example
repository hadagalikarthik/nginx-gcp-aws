provider "aws" {
  alias = "aws"
  region = local.aws_region
}

provider "kubernetes" {
  alias                  = "aws"
  host                   = local.host
  cluster_ca_certificate = base64decode(local.cluster_ca_certificate)
  token                  = data.aws_eks_cluster_auth.auth[0].token
}

provider "helm" {
  alias                  = "aws"
  kubernetes {
    host  = local.host
    cluster_ca_certificate = base64decode(local.cluster_ca_certificate)
    token = data.aws_eks_cluster_auth.auth[0].token
  }
}